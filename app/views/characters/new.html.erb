<h3>Add a character</h3>

<%= form_for @character, :html => { :class => "form-horizontal well span8", :role => "form" } do |f| %>
	<div class="form-group">
		<%= f.label(:name, class: "control-label col-lg-2")%>
        <div class="col-lg-3">
          <%= f.text_field(:name, :class => "form-control")%>
        </div>
	</div>

	<div class="form-group">
		<%= f.label(:clazz, "Class", class: "control-label col-lg-2")%>
        <div class="col-lg-3">
          <%= f.text_field(:clazz, :class => "form-control")%>
        </div>
	</div>
	
	<div class="form-group">
		<%= f.label(:server, class: "control-label col-lg-2")%>
        <div class="col-lg-3">
          <%= f.text_field(:server, :class => "form-control")%>
        </div>
	</div>
	
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-4">
			<%= link_to "Cancel", root_path, class: "btn btn-default"%>
			<%= f.submit "Save", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>