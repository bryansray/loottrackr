<h2>Loot Information</h2>

<div>Item: <%= link_to @loot.item.name, item_path(@loot.item) %></div>
<div>Looted by <%= link_to @loot.character.name, character_path(@loot.character) %> on <%= @loot.received_on_formatted %>

<% if @loots.size > 0 %>
	<h3>Item has been looted by</h3>

	<% @loots.each do |loot| %>
		<div><%= link_to loot.character.name, character_path(loot.character) %> on <%= loot.received_on_formatted %></div>
	<% end %>
<% end %>